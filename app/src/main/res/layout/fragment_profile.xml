<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo2"
    android:backgroundTint="#27FFFFFF"
    android:backgroundTintMode="src_over"
    android:columnCount="7"
    android:rowCount="14">

    <ImageButton
        android:id="@+id/tastoBack"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="5"
        android:layout_column="3"
        android:background="#EEEEEE"
        android:contentDescription="@string/TastoBack"
        android:src="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="6"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:text="I tuoi Dati"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="7"
        android:layout_column="3"
        android:layout_gravity="center"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/profilePict"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/casellaNome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="9"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/casellaCellulare"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="10"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="8"
        android:layout_column="3" />

    <TextView
        android:id="@+id/casellaMail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="11"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/casellaAuto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="12"
        android:layout_column="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:layout_row="12"
        android:layout_column="3"
        android:layout_gravity="center|left"
        android:layout_marginLeft="40dp"
        android:alpha=".7"
        app:srcCompat="@drawable/auto" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_row="9"
        android:layout_column="3"
        android:layout_gravity="center|left"
        android:layout_marginLeft="40dp"
        android:alpha=".7"
        app:srcCompat="@drawable/baseline_person_24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_row="10"
        android:layout_column="3"
        android:layout_gravity="center|left"
        android:layout_marginLeft="40dp"
        android:alpha=".7"
        app:srcCompat="@drawable/cellulare" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:layout_row="11"
        android:layout_column="3"
        android:layout_gravity="center|left"
        android:layout_marginLeft="40dp"
        android:alpha=".7"
        app:srcCompat="@drawable/emailicon" />

</GridLayout>