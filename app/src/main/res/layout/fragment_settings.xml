<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo2"
    android:backgroundTint="#27FFFFFF"
    android:backgroundTintMode="src_over"
    android:columnCount="3"
    android:gravity="center"
    android:orientation="vertical"
    android:rowCount="16"
    tools:context=".SettingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/ProPict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="238dp"
        android:layout_height="83dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="right"
        android:gravity="center|right"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="273dp"
        android:layout_height="101dp"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center"
        android:text="Impostazioni"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="145dp"
        android:layout_height="62dp"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Logout"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="275dp"
        android:layout_height="163dp"
        android:layout_row="3"
        android:layout_column="1"
        android:gravity="center|top"
        android:paddingTop="25dp"
        android:text="Cambia impostazioni disponibilitÃ  auto"
        android:textSize="23sp" />

    <Button
        android:id="@+id/CambiaImpostazioni"
        android:layout_width="197dp"
        android:layout_height="62dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="bottom|center"
        android:text="Cambia impostazioni"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="275dp"
        android:layout_height="77dp"
        android:layout_row="6"
        android:layout_column="1" />

    <ImageButton
        android:id="@+id/tastoBack2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#EDEDED"
        android:contentDescription="tastoBack2"
        android:src="?attr/homeAsUpIndicator" />

</GridLayout>